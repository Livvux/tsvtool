# Clerk Authentication
# Get these from https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_SECRET_KEY

# Clerk Issuer URL (for Convex JWT validation)
# Get this from Clerk Dashboard > JWT Templates or use your Clerk domain
# Format: https://<your-instance>.clerk.accounts.dev
CLERK_ISSUER_URL=https://YOUR_CLERK_INSTANCE.clerk.accounts.dev

# Clerk URLs (optional - these are the defaults)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Convex
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# Cloudflare R2 Storage
# Get from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
# Create an API token with "Object Read & Write" permissions
R2_ACCOUNT_ID=                  # Your Cloudflare Account ID
R2_ACCESS_KEY_ID=               # R2 API Token Access Key ID
R2_SECRET_ACCESS_KEY=           # R2 API Token Secret Access Key
R2_BUCKET_NAME=tsvtool-media    # Your R2 bucket name

# Public R2 URL (REQUIRED for image/video display)
# Enable public access in R2 bucket settings, then use the public URL
# Format: https://<bucket>.<account-id>.r2.dev OR custom domain
# MUST use NEXT_PUBLIC_ prefix for frontend access
NEXT_PUBLIC_R2_URL=             # e.g., https://pub-xxx.r2.dev
# Also set for Convex Actions (server-side presigned URL generation)
R2_PUBLIC_URL=                  # Same as NEXT_PUBLIC_R2_URL

# Google Translate
GOOGLE_TRANSLATE_API_KEY=

# WordPress
WORDPRESS_URL=https://tsvstrassenpfoten.de
WORDPRESS_APP_USERNAME=
WORDPRESS_APP_PASSWORD=

# Facebook
FACEBOOK_PAGE_ID=
FACEBOOK_ACCESS_TOKEN=

# Instagram (Graph API - Content Publishing)
# Requires: Instagram Business Account connected to Facebook Page
# Permissions: instagram_basic, instagram_content_publish, pages_read_engagement
# Get from: https://developers.facebook.com/apps/ -> Instagram -> Basic Display
INSTAGRAM_BUSINESS_ACCOUNT_ID=
INSTAGRAM_ACCESS_TOKEN=

# X/Twitter (OAuth 1.0a - API v2)
# Requires: X Developer Account with Elevated Access
# Get from: https://developer.twitter.com/en/portal/projects
# Note: Use "Consumer Keys" (API Key/Secret) and "Access Token and Secret"
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# matchpfote
MATCHPFOTE_API_KEY=
MATCHPFOTE_API_URL=https://matchpfote.de/api/v1

